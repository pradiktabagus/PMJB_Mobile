<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="200dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="#297f8f"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="10dp"
        card_view:contentPadding="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <TextView
                    android:id="@+id/nama_lokasi"
                    android:text="Jalan Pahlawan Depan Polda"
                    android:textSize="23dp"
                    android:textAlignment="center"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:textStyle="bold"/>
            <TextView
                android:id="@+id/kondisi_jalan"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_below="@+id/nama_lokasi"
                android:paddingLeft="10dp"
                android:text="Perlu Perbaikan"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/waktuaduan"
                android:layout_below="@+id/kondisi_jalan"
                android:textStyle="italic"
                android:text="2 Oktober 2017"
                android:textColor="@color/black_overlay"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_width="200dp"
                android:layout_height="30dp" />
            <ImageView
                android:src="@drawable/jajal"
                android:id="@+id/img_thumbnail"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:layout_width="130dp"
                android:layout_height="130dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/rectangleprogress"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:text="PROGRESS"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/progressaduan"
                    android:text="Tahap Pengerjaan"
                    android:textColor="@color/black_overlay"
                    android:gravity="center"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>